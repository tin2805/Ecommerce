        </div>
        <div class="col-2">
            <p>Home / {{product._category}}</p>
            <h1>{{product._name}}</h1>
            <h4>${{product._price}}</h4>
            <select id="size">
                <option value="0">Select Size</option>
                <option>XXL</option>
                <option>XL</option>
                <option>Large</option>
                <option>Medium</option>
                <option>Small</option>
                </section>
                <input type="number" value="1" id="qty">
                <p href="" class="btn" onclick="addCart()">Add To Card</p>
                <h3>Product Detail
                    <i class="fa fa-indent"></i>
                </h3>
                <br>
                <p>{{product._desc}}</p>
        </div>
    </div>
    <form id="addCart" method="POST" action="/order/cart/add">
        <input type="hidden" name="_size">
        <input type="hidden" name="_qty">
        <input type="hidden" name="_price" value="{{product._price}}">
        <input type="hidden" name="_product_id" value="{{product._id}}">
    </form>
</div>
<script>
    const size = document.getElementById('size')
    const qty = document.getElementById('qty')
    const sizeInput = document.querySelector('input[name="_size"]');
    const qtyInput = document.querySelector('input[name="_qty"]');

    function addCart () {
        if(size.value == 0) {
            alert('Please select size');
        }
        else
        {
            sizeInput.value = size.value;
            qtyInput.value = qty.value;
            document.getElementById('addCart').submit();
        }
    }
</script>